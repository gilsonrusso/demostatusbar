{
  "name": "demostatusbar",
  "displayName": "DemoStatusBar",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
 "contributes": {
		"configuration": {
			"title": "Status Bar Custom Item",
			"properties": {
				"statusBarCustomItem.text": {
					"type": "string",
					"default": "Gilson Russo",
					"description": "Custom Item Text (can be your name)"
				},
				"statusBarCustomItem.tooltip": {
					"type": "string",
					"default": "This Visual Studio Code belongs to Gilson Russo",
					"description": "Custom Item Tooltip Text"
				},
				"statusBarCustomItem.icon": {
					"type": "string",
					"default": "ðŸ”¥",
					"description": "Custom Item Icon"
				}
			}
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
